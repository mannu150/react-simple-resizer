{
	"name": "react-simple-resizer",
	"version": "0.1.0",
    "main": "./lib/index.js",
    "private": true,
    "engines": {
        "node": ">=4.0.0"
    },
    "author": {
        "name": "Mohit Anand",
        "email": "anandmohit7.dev@gmail.com"
    },
    "files": [
        "lib"
    ],
    "keywords": [
        "components",
        "react",
        "react-component",
        "toolkit"
    ],
	"dependencies": {
        "react-dom": "^16.8.5",
        "react": "^16.8.5"
	},
	"homepage": "http://mannu150.github.io/react-simple-resizer/",
	"scripts": {
		"prestart": "npm run gen:docs",
		"start": "npm-run-all --parallel start:docs gen:docs-watch",
		"gen:docs": "node scripts/generateComponentData.js",
		"gen:docs-watch": "npm run gen:docs -- --watch",
		"start:docs": "node scripts/start.js",
		"build:docs": "node scripts/build.js",
        "test": "node scripts/test.js",
        "prebuild:lib": "rimraf lib",
        "build:css": "cpx \"./src/components/**/*.css\" ./lib",
        "build:lib": "npm-run-all --parallel build:commonjs build:css build:copy-files",
        "build:copy-files": "node scripts/copyBuildFiles.js",
		"predeploy:docs": "npm run build:docs",
		"deploy:docs": "gh-pages -d build",
        "build:commonjs": "cross-env NODE_ENV=production babel ./src/components --out-dir ./lib --ignore spec.js",
        "prepublish": "npm run build:lib"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/**/*.d.ts"
		],
		"resolver": "jest-pnp-resolver",
		"setupFiles": [
			"react-app-polyfill/jsdom",
			"<rootDir>/src/setupTests.js"
		],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
			"<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
		],
		"testEnvironment": "jsdom",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
			"^.+\\.module\\.(css|sass|scss)$"
		],
		"moduleNameMapper": {
			"^react-native$": "react-native-web",
			"^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
		},
		"moduleFileExtensions": [
			"web.js",
			"js",
			"web.ts",
			"ts",
			"web.tsx",
			"tsx",
			"json",
			"web.jsx",
			"jsx",
			"node"
		],
		"watchPlugins": [
			"/Users/mohitanand/Documents/mannu/react-simple-resizer/node_modules/jest-watch-typeahead/filename.js",
			"/Users/mohitanand/Documents/mannu/react-simple-resizer/node_modules/jest-watch-typeahead/testname.js"
		]
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"modules": "commonjs"
				}
			],
			"react-app"
		]
	},
	"devDependencies": {
        "babel-cli": "^6.24.1",
        "highlight.js": "^9.10.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"chokidar": "^1.6.1",
		"cpx": "^1.5.0",
		"cross-env": "^4.0.0",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.11.2",
		"gh-pages": "^0.12.0",
		"npm-run-all": "^4.0.2",
		"prop-types": "^15.7.2",
		"react-docgen": "^2.14.0",
		"react-test-renderer": "^15.5.4",
        "rimraf": "^2.6.1",
        "@babel/core": "7.2.2",
		"@svgr/webpack": "4.1.0",
		"babel-eslint": "9.0.0",
		"babel-jest": "23.6.0",
		"babel-loader": "8.0.5",
		"babel-plugin-named-asset-import": "^0.3.1",
		"babel-preset-react-app": "^3.0.0",
		"bfj": "6.1.1",
		"case-sensitive-paths-webpack-plugin": "2.2.0",
		"css-loader": "1.0.0",
		"dotenv": "6.0.0",
		"dotenv-expand": "4.2.0",
		"eslint": "5.12.0",
		"eslint-config-react-app": "^3.0.8",
		"eslint-loader": "2.1.1",
		"eslint-plugin-flowtype": "2.50.1",
		"eslint-plugin-import": "2.14.0",
		"eslint-plugin-jsx-a11y": "6.1.2",
		"eslint-plugin-react": "7.12.4",
		"file-loader": "2.0.0",
		"fs-extra": "7.0.1",
		"html-webpack-plugin": "4.0.0-alpha.2",
		"identity-obj-proxy": "3.0.0",
		"jest": "23.6.0",
		"jest-pnp-resolver": "1.0.2",
		"jest-resolve": "23.6.0",
		"jest-watch-typeahead": "^0.2.1",
		"mini-css-extract-plugin": "0.5.0",
		"optimize-css-assets-webpack-plugin": "5.0.1",
		"pnp-webpack-plugin": "1.2.1",
		"postcss-flexbugs-fixes": "4.1.0",
		"postcss-loader": "3.0.0",
		"postcss-preset-env": "6.5.0",
		"postcss-safe-parser": "4.0.1",
		"react-app-polyfill": "^0.2.2",
		"react-dev-utils": "^8.0.0",
		"resolve": "1.10.0",
		"sass-loader": "7.1.0",
		"style-loader": "0.23.1",
		"terser-webpack-plugin": "1.2.2",
		"url-loader": "1.1.2",
		"webpack": "4.28.3",
		"webpack-dev-server": "3.1.14",
		"webpack-manifest-plugin": "2.0.4",
		"workbox-webpack-plugin": "3.6.3"
	}
}
